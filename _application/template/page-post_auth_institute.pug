html(lang='ru')
	include include/common/head
	include include/common/header-logged

	.container
		//- Хлебные крошки
		include include/common/breadcrumbs
		-var links = ['Главная', 'Участники', 'Институты', 'ИИПТ (Институт Импульсных Процессов и Технологий)'];
		+breadcrumbs(links)
		//- Хлебные крошки (конец)
		.clearfix

		.institute-banner
			img(src="images/test-content/institute-banner.jpg", alt="")

		// PUBLICATIONS WRAPPER
		.publications-wrapper.clearfix
			.post-full-wrapper
				// Section About author
				.post-information.clearfix
					.post-institute-photo
						a(href="#")
							img(src="images/test-content/institute.jpg", alt="")
					// Class .only-name for .column-information-post if only the name is known
					.column-information-post
						.post-institute-name
							a.line-link(href="#") ИИПТ (Институт Импульсных Процессов и Технологий)
						span.adress
							a.line-link(href="#")
								span Россия, Московская обл., г. Жуковский, ул. Жуковского, дом 1

				// ACTION BUTTONS
				.post-action-button.pull-right
					button.btn.btn-primary Связаться с институтом
					button.btn.btn-default(type="button", onclick="") Подписаться
				.clearfix

				.left-column
					include include/posts/post_auth_institute
				.right-column
					.widgets-panel
						include include/widget/institute-contacts-widget
						include include/widget/banner-widget
						include include/widget/events-widget
						include include/widget/photoReport-widget
						include include/widget/new-book-widget

	include include/common/footer
	include include/common/buttom-scripts